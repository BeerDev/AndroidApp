<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbild" 
    android:paddingTop="?android:attr/actionBarSize"
    >
    <RelativeLayout 
        android:id="@+id/main_layout"
       	android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:visibility="gone">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dip" 
    android:orientation="vertical"
    android:padding="10dip"
    android:weightSum="1">

    <TextView
        android:id="@+id/omKistanTextHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:shadowDx="-3"
	    android:shadowDy="3"
	    android:shadowColor="#000000"
	    android:shadowRadius="1.1"
        android:text="@string/kistan"
        android:textColor="#FFFFFF"
		style="?android:textAppearanceLarge"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical">
     
    </TextView>

    <TextView
        android:id="@+id/OmKistanTextContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:shadowDx="-2"
	    android:shadowDy="2"
	    android:shadowColor="#000000"
	    android:shadowRadius="1.1"
        android:text="@string/omKistan"
        android:textColor="#FFFFFF"
		style="?android:textAppearanceMedium"
        android:layout_weight="0.8"/>
</LinearLayout>
</RelativeLayout>
    <!-- MENU LAYOUT -->
    <RelativeLayout 
    	android:id="@+id/menu_layout"
       	android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:visibility="gone">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#80000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageGalleri"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:background="@drawable/galleri" />

        <ImageView
            android:id="@+id/imageLista"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:background="@drawable/lista" />

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageOltyper"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:background="@drawable/oltyper" />

        <ImageView
            android:id="@+id/imageKistan"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:layout_marginRight="@dimen/abc_action_button_min_width"
            android:background="@drawable/kistan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageUtvecklare"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginLeft="135dip"
            android:background="@drawable/utvecklare" />

    </LinearLayout>
</LinearLayout>  
        
	</RelativeLayout>
</ScrollView>