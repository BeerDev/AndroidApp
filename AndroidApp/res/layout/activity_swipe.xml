<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeViewActivity" 
    android:paddingTop="?android:attr/actionBarSize"
    android:background="@drawable/testbild"
    android:animateLayoutChanges="true">
	<FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >
    <RelativeLayout 
    	android:id="@+id/main_layout"
       android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:visibility="visible">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="100dp"
        sothree:shadowHeight="4dp"
        sothree:paralaxOffset="0dp"
        sothree:dragView="@+id/name"
        sothree:overlay="true">

        <!-- Main Layout -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
	        <android.support.v4.view.ViewPager
			    xmlns:android="http://schemas.android.com/apk/res/android"
			    xmlns:app="http://schemas.android.com/apk/res-auto"
			    android:id="@+id/pager"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent" />          
        </LinearLayout>

        <!-- SlideUpPanel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/beerName"
              		style="?android:textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"/>

				<TextView
                    android:id="@+id/beerPrice"
              		style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/beerSize"
              		style="?android:textAppearanceSmall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"/>

				<TextView
                    android:id="@+id/beerPercent"
              		style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>
            
            <TextView
                    android:id="@+id/beerInfo"
              		style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    </RelativeLayout>
    
    <!-- MENU LAYOUT -->
    <RelativeLayout 
    	android:id="@+id/menu_layout"
       	android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:visibility="visible"
    	android:alpha="0">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#80000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageGalleri"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:background="@drawable/galleri" />

        <ImageView
            android:id="@+id/imageLista"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:background="@drawable/lista" />

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageOltyper"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:background="@drawable/oltyper" />

        <ImageView
            android:id="@+id/imageKistan"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/abc_action_button_min_width"
            android:layout_marginRight="@dimen/abc_action_button_min_width"
            android:background="@drawable/kistan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageUtvecklare"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginLeft="135dip"
            android:background="@drawable/utvecklare" />

    </LinearLayout>
</LinearLayout>  
        
	</RelativeLayout>
    </FrameLayout>
</RelativeLayout>