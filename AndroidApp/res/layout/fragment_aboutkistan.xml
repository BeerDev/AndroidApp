<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swAboutKistan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/llAboutKistan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAboutKistanHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/HeadLineText"
            android:text="@string/kistanheader" />

        <TextView
            android:id="@+id/tvAboutKistanTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/BodyText"
            android:text="@string/omKistan" />
		<TextView
            android:id="@+id/tvAboutKistanObserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            style="@style/BodyText"
            android:textStyle="bold"
            android:text="@string/observera" />
        </LinearLayout>

</ScrollView>