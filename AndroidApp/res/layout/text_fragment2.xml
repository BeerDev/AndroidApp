<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<!-- Container for TextViews -->
		<LinearLayout 
	    	android:id="@+id/text_layout_info"
	    	android:layout_width="fill_parent"
          	android:layout_height="wrap_content"
          	android:orientation="vertical"
          	android:layout_gravity="top">

	    	<!-- First line of TextViews -->
	    	<LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:orientation="horizontal" 
	          android:weightSum="1">

		          <TextView
		              android:id="@+id/swipeBeerNameInfo"
		              style="?android:textAppearanceMedium"
		              android:layout_width="0dip"
		              android:layout_height="wrap_content"
		              android:layout_weight="0.8"
		              android:layout_gravity="left"
		              android:lineSpacingMultiplier="1.2"
		              android:textSize="18sp"
		              android:textStyle="normal|bold" />
		
		          <TextView
		              android:id="@+id/swipeBeerPriceInfo"
		              style="?android:textAppearanceMedium"
		              android:layout_width="0dip"
		              android:layout_height="wrap_content"
		              android:layout_gravity="right"
		              android:layout_weight="0.2"
		              android:lineSpacingMultiplier="1.2"
		              android:textSize="15sp" />		
      		</LinearLayout>
      		<!-- Second line of two TextViews -->
    	    <LinearLayout
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:orientation="horizontal"
		          android:layout_gravity="bottom"
		          android:weightSum="1">
          		
		          <TextView
		              android:id="@+id/swipeBeerSizeInfo"
		              style="?android:textAppearanceMedium"
		              android:layout_width="0dip"
		              android:layout_height="wrap_content"
		              android:layout_weight="0.8"
		              android:lineSpacingMultiplier="1.2"
		              android:textSize="18sp"
		              android:textStyle="normal|bold" />
		
		          <TextView
		              android:id="@+id/swipeBeerPercentInfo"
		              style="?android:textAppearanceMedium"
		              android:layout_width="0dip"
		              android:layout_weight="0.2"
		              android:layout_height="wrap_content"
		              android:lineSpacingMultiplier="1.2"
		              android:textSize="15sp" />
		          
      		</LinearLayout>
		</LinearLayout>
		<TextView
		              android:id="@+id/swipeBeerInfoInfo"
		              style="?android:textAppearanceMedium"
		              android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:lineSpacingMultiplier="1.2"
		              android:textSize="15sp" />
	
</LinearLayout>
